{
    "version": 8,
    "configurePresets": [
        {
            "name": "Debug",
            "displayName": "Pico - Debug",
            "description": "Configure for Raspberry Pi Pico SDK and toolchain",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install/${presetName}",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Release",
            "displayName": "Pico - Release",
            "description": "Configure for Raspberry Pi Pico SDK and toolchain",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install/${presetName}",
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}
